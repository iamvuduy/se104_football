.ts-shell {
  min-height: calc(100vh - 120px);
  padding: 3rem 1.5rem 4rem;
  background: linear-gradient(155deg, #eef2ff 0%, #f8fafc 45%, #ffffff 100%);
}

.ts-container {
  max-width: 1040px;
  margin: 0 auto;
  padding: 0 2.25rem 3.5rem;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 24px;
  box-shadow: 0 28px 60px rgba(15, 23, 42, 0.16);
  backdrop-filter: blur(6px);
}

.ts-container h1 {
  margin: 0;
  color: #0f172a;
  font-size: 2.15rem;
}

.ts-subtitle {
  text-align: center;
  color: #4b5563;
  margin: 0.5rem auto 2rem;
  max-width: 620px;
}

.ts-loading {
  padding: 2.5rem;
  text-align: center;
  color: #4b5563;
}

.ts-hero {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1.5rem;
  padding: 2.75rem 0 2.25rem;
}

.ts-hero > div:first-child {
  max-width: 560px;
}

.ts-hero p {
  margin: 0.75rem 0 0;
  color: #475569;
  line-height: 1.6;
}

.ts-hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  padding: 0.35rem 0.9rem;
  border-radius: 999px;
  background: rgba(79, 70, 229, 0.08);
  color: #4338ca;
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.14em;
  text-transform: uppercase;
}

.ts-hero-actions {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.ts-alert,
.ts-toast {
  margin: 0 0 1.5rem;
  padding: 1rem 1.25rem;
  border-radius: 12px;
  font-weight: 500;
  cursor: pointer;
  box-shadow: 0 12px 28px rgba(15, 23, 42, 0.08);
}

.ts-alert {
  background: rgba(248, 113, 113, 0.12);
  color: #b91c1c;
  border: 1px solid rgba(248, 113, 113, 0.35);
}

.ts-toast {
  background: rgba(134, 239, 172, 0.16);
  color: #166534;
  border: 1px solid rgba(74, 222, 128, 0.3);
}

.ts-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 1rem;
  padding: 0;
  margin: 0 0 2.25rem;
  list-style: none;
}

.ts-summary-item {
  position: relative;
  display: flex;
  flex-direction: column;
  gap: 0.45rem;
  padding: 1.25rem 1.3rem;
  border-radius: 18px;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.92), #f8fafc);
  border: 1px solid rgba(148, 163, 184, 0.28);
  box-shadow: 0 14px 28px rgba(15, 23, 42, 0.08);
}

.ts-summary-label {
  font-size: 0.75rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: #64748b;
}

.ts-summary-value {
  font-size: 1.35rem;
  color: #0f172a;
  font-weight: 700;
}

.ts-summary-hint {
  font-size: 0.85rem;
  color: #64748b;
}

.ts-section {
  margin-bottom: 2.5rem;
  padding: 2rem;
  border: 1px solid rgba(148, 163, 184, 0.18);
  border-radius: 20px;
  background: linear-gradient(180deg, rgba(241, 245, 249, 0.7), #ffffff);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.6);
}

.ts-section header {
  margin-bottom: 1.5rem;
}

.ts-section header h2 {
  margin: 0;
  font-size: 1.3rem;
  color: #111827;
}

.ts-section header span {
  display: block;
  margin-top: 0.25rem;
  color: #6b7280;
  font-size: 0.95rem;
}

.ts-grid {
  display: grid;
  gap: 1.25rem;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
}

.ts-field {
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
}

.ts-field span {
  font-size: 0.95rem;
  color: #4b5563;
}

.ts-field input {
  padding: 0.65rem 0.75rem;
  border-radius: 8px;
  border: 1px solid #d1d5db;
  font-size: 1rem;
  transition: border 0.2s ease, box-shadow 0.2s ease;
  background: rgba(255, 255, 255, 0.9);
}

.ts-field input:focus {
  outline: none;
  border-color: rgba(79, 70, 229, 0.55);
  box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
}

.ts-goal-types h3,
.ts-priority h3 {
  margin: 0 0 0.75rem;
  font-size: 1.1rem;
  color: #111827;
}

.ts-goal-add {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.ts-goal-add input {
  flex: 1 1 240px;
  padding: 0.65rem 0.75rem;
  border-radius: 8px;
  border: 1px solid #d1d5db;
  font-size: 1rem;
  transition: border 0.2s ease, box-shadow 0.2s ease;
}

.ts-goal-add input:focus {
  outline: none;
  border-color: rgba(59, 130, 246, 0.55);
  box-shadow: 0 0 0 4px rgba(96, 165, 250, 0.16);
}

.ts-btn {
  padding: 0.7rem 1.35rem;
  border: none;
  border-radius: 999px;
  font-size: 0.95rem;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.15s ease, box-shadow 0.2s ease;
  background: rgba(15, 23, 42, 0.08);
  color: #0f172a;
}

.ts-btn:disabled {
  opacity: 0.65;
  cursor: not-allowed;
}

.ts-btn:not(:disabled):hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 18px rgba(17, 24, 39, 0.1);
}

.ts-btn.is-primary {
  background: linear-gradient(135deg, #4c6ef5 0%, #5a67d8 48%, #805ad5 100%);
  color: #ffffff;
}

.ts-btn.is-danger {
  background: linear-gradient(135deg, #f87171 0%, #ef4444 48%, #dc2626 100%);
  color: #ffffff;
}

.ts-btn.is-ghost {
  background: rgba(79, 70, 229, 0.1);
  color: #4338ca;
  border: 1px solid rgba(79, 70, 229, 0.25);
}

.ts-chip-list {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin: 0;
  padding: 0;
  list-style: none;
}

.ts-chip {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 0.75rem;
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
  border-radius: 999px;
  font-size: 0.9rem;
}

.ts-chip-remove {
  border: none;
  background: transparent;
  font-size: 1rem;
  cursor: pointer;
  color: inherit;
}

.ts-priority p {
  margin: 0 0 0.75rem;
  color: #6b7280;
}

.ts-priority-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.ts-priority-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.75rem 0.9rem;
  border-radius: 12px;
  border: 1px dashed rgba(99, 102, 241, 0.4);
  background: rgba(238, 242, 255, 0.8);
  cursor: grab;
  user-select: none;
  transition: transform 0.15s ease, box-shadow 0.2s ease;
}

.ts-priority-item:active {
  cursor: grabbing;
}

.ts-priority-handle {
  font-size: 1.1rem;
  color: #1f2937;
}

.ts-actions {
  display: flex;
  justify-content: flex-end;
  padding: 0 0 2.5rem;
}

.ts-actions-group {
  display: flex;
  gap: 1rem;
}

@media (max-width: 640px) {
  .ts-shell {
    padding: 2rem 1rem 3rem;
  }

  .ts-container {
    padding: 0 1.5rem 2.5rem;
  }

  .ts-hero {
    flex-direction: column;
    align-items: flex-start;
  }

  .ts-hero-actions {
    width: 100%;
    justify-content: flex-start;
  }

  .ts-summary {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  }

  .ts-actions-group {
    flex-direction: column-reverse;
  }

  .ts-actions-group .ts-btn {
    width: 100%;
  }
}
